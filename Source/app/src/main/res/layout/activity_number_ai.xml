<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/view_root">

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/main_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

            <kr.co.roysoft.lotto649.view.text.LargeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI PICK" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <kr.co.roysoft.lotto649.view.button.TextButton
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:text="INPUT"
                android:id="@+id/btn_manual" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="72dp"
            android:layout_marginRight="20dp">

            <kr.co.roysoft.lotto649.view.text.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Draw : " />

            <kr.co.roysoft.lotto649.view.text.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_lotto_count" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="102dp"
            android:layout_marginRight="20dp">

            <kr.co.roysoft.lotto649.view.text.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choice Count : "/>

            <kr.co.roysoft.lotto649.view.text.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_drawing_count"/>

        </LinearLayout>

        <kr.co.roysoft.lotto649.view.text.SmallTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="132dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="* The draw count will reset to 5 after the next draw."/>

        <kr.co.roysoft.lotto649.view.custom.NumberViewGroup
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="171dp"
            android:id="@+id/number_ai" />

        <kr.co.roysoft.lotto649.view.button.LargeButton
            android:layout_width="250dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="262dp"
            android:text="AI PICK"
            android:id="@+id/btn_ai" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="370dp"
            android:layout_marginBottom="64dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:id="@+id/frame_ad">

            </FrameLayout>

            <kr.co.roysoft.lotto649.view.text.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Numbers"
                android:layout_marginLeft="20dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/frame_history">

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>